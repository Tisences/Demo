<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:id="@+id/law_top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true">

        <Chronometer
            android:id="@+id/law_current_chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10px"
            android:layout_marginLeft="10px"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/law_total_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10px"
            android:layout_marginRight="10px"
            android:gravity="center"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/colorAccent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/law_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/law_take_photo_and_video"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_video_session_start" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/law_surface_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/law_bottom_bar"
        android:layout_below="@id/law_top_bar">

        <SurfaceView
            android:id="@+id/law_surface_view"
            android:layout_width="360dp"
            android:layout_height="360dp" />
    </RelativeLayout>
</RelativeLayout>